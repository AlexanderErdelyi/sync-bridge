@page
@using SyncBridge.Web.Helpers
@model WorkItemsModel
@{
    ViewData["Title"] = "Work Items";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-list-task"></i> Work Items Management</h1>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createWorkItemModal">
            <i class="bi bi-plus-circle"></i> Create Work Item
        </button>
    </div>

    @if (Model.WorkItems.Any())
    {
        <div class="card mb-4">
            <div class="card-header bg-dark text-white">
                <h5 class="mb-0"><i class="bi bi-list"></i> Work Items (@Model.WorkItems.Count)</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Title</th>
                                <th>Type</th>
                                <th>State</th>
                                <th>Priority</th>
                                <th>Assigned To</th>
                                <th>Comments</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.WorkItems)
                            {
                                <tr>
                                    <td><code>@item.Id</code></td>
                                    <td>@TextHelper.StripHtmlTags(item.Title)</td>
                                    <td><span class="badge bg-secondary">@item.Type</span></td>
                                    <td><span class="badge bg-info">@item.State</span></td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.Priority))
                                        {
                                            <span class="badge bg-warning">@item.Priority</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>@(item.AssignedTo ?? "-")</td>
                                    <td>
                                        <span class="badge bg-primary">@item.Comments.Count</span>
                                    </td>
                                    <td>
                                        <a asp-page="WorkItemDetails" asp-route-id="@item.Id" asp-route-system="@item.Source" 
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye"></i> View
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No work items found. Create a new work item or retrieve items from adapters on the Testing page.
        </div>
    }
</div>

<!-- Create Work Item Modal -->
<div class="modal fade" id="createWorkItemModal" tabindex="-1" aria-labelledby="createWorkItemModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form method="post" asp-page-handler="CreateWorkItem">
                <div class="modal-header">
                    <h5 class="modal-title" id="createWorkItemModalLabel">
                        <i class="bi bi-plus-circle"></i> Create New Work Item
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="targetSystem" class="form-label">Target System</label>
                        <select class="form-select" id="targetSystem" name="targetSystem" required>
                            @foreach (var adapter in Model.Adapters)
                            {
                                <option value="@adapter.SystemName">@adapter.SystemName</option>
                            }
                        </select>
                        <div class="form-text">Select which system to create the work item in</div>
                    </div>
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" class="form-control" id="title" name="title" required placeholder="Work item title">
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea class="form-control" id="description" name="description" rows="4" 
                                  placeholder="Detailed description of the work item"></textarea>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="type" class="form-label">Type</label>
                            <select class="form-select" id="type" name="type" required>
                                <option value="Task">Task</option>
                                <option value="Bug">Bug</option>
                                <option value="User Story">User Story</option>
                                <option value="Feature">Feature</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="priority" class="form-label">Priority</label>
                            <select class="form-select" id="priority" name="priority">
                                <option value="">None</option>
                                <option value="1">1 - Critical</option>
                                <option value="2">2 - High</option>
                                <option value="3">3 - Medium</option>
                                <option value="4">4 - Low</option>
                            </select>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="state" class="form-label">State</label>
                        <select class="form-select" id="state" name="state" required>
                            <option value="New">New</option>
                            <option value="Active">Active</option>
                            <option value="Resolved">Resolved</option>
                            <option value="Closed">Closed</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="assignedTo" class="form-label">Assigned To</label>
                        <input type="text" class="form-control" id="assignedTo" name="assignedTo" 
                               placeholder="User name or email">
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="syncToDevOps" name="syncToDevOps" checked>
                        <label class="form-check-label" for="syncToDevOps">
                            <strong>Automatically sync to other systems</strong>
                        </label>
                        <div class="form-text">If enabled, the work item will be immediately synced to configured target systems</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Create & Sync
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
